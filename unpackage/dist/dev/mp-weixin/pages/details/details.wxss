.video {
  width: 100%;
  height: 440rpx;
  display: block;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  padding: 30rpx 20rpx;
}
.content .content-img {
    width: 200rpx;
    height: 270rpx;
    display: block;
    margin-right: 20rpx;
}
.content .info {
    font-size: 28rpx;
    color: darkgray;
}
.content .info .name {
      font-size: 50rpx;
      font-weight: bold;
      color: #000;
      margin-bottom: 10rpx;
}
.item {
  padding: 20rpx;
}
.item .title {
    font-size: 32rpx;
    color: darkgray;
    line-height: 2em;
}
.item .jieshao {
    font-size: 28rpx;
    color: #444;
    line-height: 1.75em;
    text-align: justify;
}
.item .juzhao {
    width: 100%;
    white-space: nowrap;
}
.item .juzhao image {
      display: inline-block;
      width: 250rpx;
      height: 350rpx;
      margin-right: 16rpx;
}
.item .juzhao image:nth-last-child(1) {
        margin-right: 0;
}
.item .yuanyuan {
    width: 100%;
    white-space: nowrap;
}
.item .yuanyuan .yuanyuan-item {
      width: 200rpx;
      display: inline-block;
      margin-right: 10rpx;
}
.item .yuanyuan .yuanyuan-item:nth-last-child(1) {
        margin-right: 0;
}
.item .yuanyuan .yuanyuan-item .name {
        font-size: 28rpx;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
}
.item .yuanyuan .yuanyuan-item .actName {
        font-size: 24rpx;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        color: #A9A9A9;
}
.item .yuanyuan image {
      width: 200rpx;
      height: 282rpx;
}
.pingfen-wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: #f5efef;
  padding: 30rpx 20rpx;
  margin: 0 20rpx;
  font-size: 38rpx;
}
.pingfen-wrap .zhpf {
    margin-right: 60rpx;
}
.pingfen-wrap .score {
    color: red;
    font-size: 50rpx;
}
.line-wrap {
  padding: 30rpx 20rpx;
}
.line-wrap .line {
    width: 100%;
    height: 4rpx;
    background: #efeff4;
}

